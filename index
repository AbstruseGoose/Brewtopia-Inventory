  function setStatus(el, msg, type) {
    if (!el) return;
    el.textContent = msg || "";
    el.classList.remove("ok", "error");
    if (type) el.classList.add(type);
  }

  function loadCategories() {
    try {
      const raw = localStorage.getItem(STORAGE_CATS);
      if (raw) {
        const parsed = JSON.parse(raw);
        if (Array.isArray(parsed) && parsed.length) categories = parsed;
      }
    } catch {}
    ["Syrup","Milk","Topping","Cup","Other"].forEach(c => { if (!categories.includes(c)) categories.push(c); });
  }

  function saveCategories() {
    localStorage.setItem(STORAGE_CATS, JSON.stringify(categories));
  }

  function loadBrands() {
    try {
      const raw = localStorage.getItem(STORAGE_BRANDS);
      if (raw) {
        const parsed = JSON.parse(raw);
        if (Array.isArray(parsed) && parsed.length) brands = parsed;
      }
    } catch {}
    ["Torani","Monin","DaVinci","Hollander","Other"].forEach(b => { if (!brands.includes(b)) brands.push(b); });
  }

  function saveBrands() {
    localStorage.setItem(STORAGE_BRANDS, JSON.stringify(brands));
  }

  function refreshCategoryOptions() {
    modalCategory.innerHTML = "";
    categories.forEach(cat => {
      const opt = document.createElement("option");
      opt.value = cat;
      opt.textContent = cat;
      modalCategory.appendChild(opt);
    });
  }

  function refreshBrandOptions() {
    modalBrand.innerHTML = "";
    brands.forEach(b => {
      const opt = document.createElement("option");
      opt.value = b;
      opt.textContent = b;
      modalBrand.appendChild(opt);
    });
  }

  function loadInventoryFromStorage() {
    try {
      const raw = localStorage.getItem(STORAGE_KEY);
      if (!raw) {
        inventory = {};
        return;
      }
      const parsed = JSON.parse(raw);
      inventory = parsed.items || {};
      // migration: old items with qty -> office qty
      Object.values(inventory).forEach(item => {
        if (item.qty_office == null && item.qty_trailer == null && item.qty_caboose == null) {
          const old = Number(item.qty || 0);
          item.qty_office = old;
          item.qty_trailer = 0;
          item.qty_caboose = 0;
          delete item.qty;
        }
        if (item.qty_office == null) item.qty_office = 0;
        if (item.qty_trailer == null) item.qty_trailer = 0;
        if (item.qty_caboose == null) item.qty_caboose = 0;
      });
    } catch (e) {
      console.error("Failed to load inventory", e);
      inventory = {};
    }
  }

  function saveInventoryToStorage() {
    localStorage.setItem(STORAGE_KEY, JSON.stringify({ items: inventory }));
  }

  function inventoryArray() {
    return Object.values(inventory || {});
  }

  function getCategorySlug(cat) {
    const c = (cat || "").toLowerCase();
    if (c === "syrup") return "syrup";
    if (c === "milk") return "milk";
    if (c === "topping") return "topping";
    if (c === "cup" || c === "cups") return "cup";
    return "other";
  }

  function getCategoryChipClass(cat) {
    const slug = getCategorySlug(cat);
    return {
      syrup: "chip chip-cat-syrup",
      milk: "chip chip-cat-milk",
      topping: "chip chip-cat-topping",
      cup: "chip chip-cat-cup",
      other: "chip chip-cat-other"
    }[slug];
  }

  function playBeep() {
    try {
      const snd = $("beepSound");
      snd.currentTime = 0;
      snd.play().catch(()=>{});
    } catch {}
  }

  function isValidUPC(code) {
    if (!/^[0-9]{12}$/.test(code)) return false;
    let sum = 0;
    for (let i = 0; i < 11; i++) {
      const n = parseInt(code[i], 10);
      sum += (i % 2 === 0) ? n * 3 : n;
    }
    const check = (10 - (sum % 10)) % 10;
    return check === parseInt(code[11], 10);
  }

  function updateSummaryLine() {
    const rows = inventoryArray();
    if (!rows.length) {
      summaryLine.textContent = "No items tracked yet. Start in ‚ÄúReceive Stock‚Äù to scan bottles into inventory.";
      return;
    }
    let totalUnits = 0;
    let low = 0;
    let zero = 0;
    rows.forEach(item => {
      const total = Number(item.qty_office||0) + Number(item.qty_trailer||0) + Number(item.qty_caboose||0);
      const par = Number(item.par||0);
      totalUnits += total;
      if (total === 0) zero++;
      else if (par > 0 && total < par) low++;
    });
    summaryLine.textContent =
      `Tracking ${rows.length} items ‚Ä¢ ${totalUnits} units across all locations. ` +
      `${low ? low + " low" : "No low stock"} ‚Ä¢ ${zero ? zero + " out" : "None out of stock"}.`;
  }

  function renderInventoryTable() {
    const rows = inventoryArray();
    const search = invSearch.value.trim().toLowerCase();
    let filtered = rows.slice();

    if (search) {
      filtered = filtered.filter(item =>
        (item.name || "").toLowerCase().includes(search) ||
        (item.upc || "").includes(search)
      );
    }

    filtered.sort((a,b) => (a.name||"").localeCompare(b.name||""));

    inventoryBody.innerHTML = "";

    if (!filtered.length) {
      const tr = document.createElement("tr");
      const td = document.createElement("td");
      td.colSpan = 11;
      td.textContent = "No items match. Try clearing search or start scanning in Receive Stock.";
      td.className = "small-text";
      tr.appendChild(td);
      inventoryBody.appendChild(tr);
      inventoryStatus.textContent = "";
      return;
    }

    let totalUnits = 0;
    filtered.forEach(item => {
      const qO = Number(item.qty_office||0);
      const qT = Number(item.qty_trailer||0);
      const qC = Number(item.qty_caboose||0);
      const par = Number(item.par||0);
      const total = qO + qT + qC;
      totalUnits += total;

      const tr = document.createElement("tr");
      if (total === 0) tr.classList.add("stock-zero");
      else if (par > 0 && total < par) tr.classList.add("stock-low");

      const tdName = document.createElement("td");
      tdName.innerHTML = `<strong>${item.name || "(unnamed item)"}</strong><br>
        <span class="small-text">${item.size || ""} ${item.unit || ""}</span>`;

      const tdUpc = document.createElement("td");
      tdUpc.textContent = item.upc || "";

      const tdCat = document.createElement("td");
      const chipClass = getCategoryChipClass(item.category);
      const catLabel = item.category || "Other";
      tdCat.innerHTML = `<span class="${chipClass}">${catLabel}</span>`;

      const tdBrand = document.createElement("td");
      tdBrand.textContent = item.brand || "";

      const tdSf = document.createElement("td");
      tdSf.textContent = item.sugarFree ? "SF" : "";

      const tdO = document.createElement("td");
      tdO.textContent = qO;

      const tdT = document.createElement("td");
      tdT.textContent = qT;

      const tdC = document.createElement("td");
      tdC.textContent = qC;

      const tdTotal = document.createElement("td");
      tdTotal.textContent = total;

      const tdPar = document.createElement("td");
      tdPar.textContent = par || "";

      const tdEdit = document.createElement("td");
      const editBtn = document.createElement("button");
      editBtn.textContent = "Edit";
      editBtn.className = "btn secondary";
      editBtn.style.padding = "4px 10px";
      editBtn.style.fontSize = "11px";
      editBtn.addEventListener("click", () => openEditItem(item.upc));
      tdEdit.appendChild(editBtn);

      tr.appendChild(tdName);
      tr.appendChild(tdUpc);
      tr.appendChild(tdCat);
      tr.appendChild(tdBrand);
      tr.appendChild(tdSf);
      tr.appendChild(tdO);
      tr.appendChild(tdT);
      tr.appendChild(tdC);
      tr.appendChild(tdTotal);
      tr.appendChild(tdPar);
      tr.appendChild(tdEdit);

      inventoryBody.appendChild(tr);
    });

    inventoryStatus.textContent = `${filtered.length} items ‚Ä¢ ${totalUnits} units total across all locations`;
  }

  invSearch.addEventListener("input", renderInventoryTable);

  loginBtn.addEventListener("click", () => {
    const pin = pinInput.value.trim();
    if (!pin) {
      setStatus(loginStatus, "Enter PIN to unlock.", "error");
      return;
    }
    if (pin !== PIN) {
      setStatus(loginStatus, "Incorrect PIN.", "error");
      return;
    }
    localStorage.setItem("brewtopia_pin_ok", "1");
    enterMain();
  });

  function enterMain() {
    loginCard.classList.add("hidden");
    mainArea.classList.remove("hidden");
    sessionInfo.textContent = "Unlocked ‚Ä¢ Local inventory";
    setStatus(globalStatus, "Inventory is stored locally on this device. Export or download HTML anytime.", "ok");
    loadInventoryFromStorage();
    syncCategoriesAndBrandsFromInventory();
    renderInventoryTable();
    updateSummaryLine();
    showSection("receive");
  }

  lockBtn.addEventListener("click", () => {
    stopScanner();
    mainArea.classList.add("hidden");
    loginCard.classList.remove("hidden");
    setStatus(loginStatus, "Locked. Enter PIN again.", null);
  });

  function syncCategoriesAndBrandsFromInventory() {
    const items = inventoryArray();
    items.forEach(item => {
      if (item.category && !categories.includes(item.category)) categories.push(item.category);
      if (item.brand && !brands.includes(item.brand)) brands.push(item.brand);
    });
    saveCategories();
    saveBrands();
  }

  btnReceive.addEventListener("click", () => showSection("receive"));
  btnUse.addEventListener("click", () => showSection("use"));
  btnInventory.addEventListener("click", () => showSection("inventory"));

  function showSection(name) {
    receiveCard.classList.add("hidden");
    useCard.classList.add("hidden");
    inventoryCard.classList.add("hidden");

    stopScanner();

    if (name === "receive") {
      receiveCard.classList.remove("hidden");
      receiveManualUpc.focus();
    }
    if (name === "use") {
      useCard.classList.remove("hidden");
      useManualUpc.focus();
    }
    if (name === "inventory") {
      inventoryCard.classList.remove("hidden");
    }
  }

  receiveManualBtn.addEventListener("click", () => {
    const upc = receiveManualUpc.value.trim();
    if (!upc) return;
    handleScan(upc, "receive");
    receiveManualUpc.value = "";
    receiveManualUpc.focus();
  });

  useManualBtn.addEventListener("click", () => {
    const upc = useManualUpc.value.trim();
    if (!upc) return;
    handleScan(upc, "use");
    useManualUpc.value = "";
    useManualUpc.focus();
  });

  function handleScan(upc, action) {
    if (!upc) return;
    upc = upc.trim();
    if (!upc) return;

    // Normalize UPC: if 13 digits and starts with 0, strip leading 0
    if (upc.length === 13 && upc.startsWith("0")) {
      const candidate = upc.substring(1);
      if (isValidUPC(candidate)) upc = candidate;
    }
    if (upc.length === 12 && !isValidUPC(upc)) {
      const statusEl = action === "receive" ? receiveStatus : useStatus;
      setStatus(statusEl, "Scan rejected (invalid UPC). Try again.", "error");
      return;
    }

    if (scanModalBackdrop.classList.contains("hidden") === false) {
      // already asking about another scan, ignore
      return;
    }

    pendingUPC = upc;
    pendingAction = action;

    const item = inventory[upc];
    const name = item ? item.name : "(Unknown item)";
    scanItemLabel.textContent = `${name} ‚Äî ${upc}`;
    scanQtyInput.value = 1;
    scanLocationSelect.value = "trailer"; // default to trailer, easiest for baristas
    scanModalTitle.textContent = action === "receive" ? "Receive Stock" : "Use Item";

    scanModalBackdrop.classList.remove("hidden");
    scanQtyInput.focus();
    scanQtyInput.select();
  }

  scanQtyCancel.addEventListener("click", () => {
    closeScanModal();
  });

  scanQtyOk.addEventListener("click", () => {
    const qty = parseInt(scanQtyInput.value || "1", 10);
    if (!pendingUPC || !pendingAction || !Number.isFinite(qty) || qty <= 0) {
      closeScanModal();
      return;
    }
    const loc = scanLocationSelect.value; // "office"|"trailer"|"caboose"
    if (pendingAction === "receive") {
      applyReceive(pendingUPC, loc, qty);
    } else if (pendingAction === "use") {
      applyUse(pendingUPC, loc, qty);
    }
    closeScanModal();
  });

  scanQtyInput.addEventListener("keydown", (e) => {
    if (e.key === "Enter") {
      scanQtyOk.click();
    }
  });

  function closeScanModal() {
    scanModalBackdrop.classList.add("hidden");
    pendingUPC = null;
    pendingAction = null;
  }

  function applyReceive(upc, loc, qty) {
    let item = inventory[upc];
    const now = new Date().toISOString();

    if (!item) {
      // unknown item: create shell, let user fill details with quantities prefilled
      const initial = { office:0, trailer:0, caboose:0 };
      if (loc === "office") initial.office = qty;
      if (loc === "trailer") initial.trailer = qty;
      if (loc === "caboose") initial.caboose = qty;
      openNewItemWithQuantities(upc, initial);
      return;
    }

    if (loc === "office") item.qty_office = Number(item.qty_office||0) + qty;
    if (loc === "trailer") item.qty_trailer = Number(item.qty_trailer||0) + qty;
    if (loc === "caboose") item.qty_caboose = Number(item.qty_caboose||0) + qty;
    item.last_added = now;
    inventory[upc] = item;
    saveInventoryToStorage();
    renderInventoryTable();
    updateSummaryLine();

    const total = Number(item.qty_office||0) + Number(item.qty_trailer||0) + Number(item.qty_caboose||0);
    setStatus(receiveStatus, `Added ${qty} to ${locLabel(loc)} for ${item.name || "(item)"} ‚Äî total ${total}.`, "ok");
  }

  function applyUse(upc, loc, qty) {
    const item = inventory[upc];
    if (!item) {
      setStatus(useStatus, "UPC not found. Scan it in Receive Stock first.", "error");
      return;
    }
    let before = 0;
    if (loc === "office") before = Number(item.qty_office||0);
    if (loc === "trailer") before = Number(item.qty_trailer||0);
    if (loc === "caboose") before = Number(item.qty_caboose||0);
    const after = Math.max(0, before - qty);

    if (loc === "office") item.qty_office = after;
    if (loc === "trailer") item.qty_trailer = after;
    if (loc === "caboose") item.qty_caboose = after;

    item.last_used = new Date().toISOString();
    inventory[upc] = item;
    saveInventoryToStorage();
    renderInventoryTable();
    updateSummaryLine();

    const total = Number(item.qty_office||0) + Number(item.qty_trailer||0) + Number(item.qty_caboose||0);
    let msg = `Used ${Math.min(qty, before)} from ${locLabel(loc)} for ${item.name || "(item)"} ‚Äî location now ${after}, total ${total}.`;
    const par = Number(item.par||0);
    if (total === 0) msg += " ‚ö† Out of stock.";
    else if (par > 0 && total < par) msg += " ‚ö† Below par.";
    setStatus(useStatus, msg, (total === 0 || (par>0 && total<par)) ? "error":"ok");
  }

  function locLabel(loc) {
    if (loc === "office") return "Office";
    if (loc === "trailer") return "Coffee Trailer";
    if (loc === "caboose") return "Camper Caboose";
    return loc;
  }

  function isHighConfidence(result) {
    if (!result.codeResult || !result.codeResult.decodedCodes) return false;
    const sum = result.codeResult.decodedCodes
      .filter(c => typeof c.error === "number")
      .reduce((acc, c) => acc + c.error, 0);
    return sum >= -5;
  }

  function startScanner(mode) {
    if (currentScanMode) stopScanner();
    currentScanMode = mode;
    torchOn = false;

    const wrapper = mode === "receive" ? receiveVideoWrapper : useVideoWrapper;
    const statusEl = mode === "receive" ? receiveStatus : useStatus;
    const startBtn = mode === "receive" ? startReceiveScanBtn : startUseScanBtn;
    const stopBtn = mode === "receive" ? stopReceiveScanBtn : stopUseScanBtn;
    const torchBtn = mode === "receive" ? toggleReceiveTorchBtn : toggleUseTorchBtn;

    wrapper.classList.remove("hidden");
    startBtn.disabled = true;
    stopBtn.disabled = false;
    torchBtn.disabled = true;
    torchBtn.textContent = "Flash";

    setStatus(statusEl, "Initializing camera‚Ä¶", null);

    const config = {
      inputStream: {
        type: "LiveStream",
        constraints: {
          facingMode: "environment",
          width: { ideal: 1280 },
          height: { ideal: 720 }
        },
        target: wrapper,
        area: { top: "20%", right: "20%", left: "20%", bottom: "20%" }
      },
      locator: {
        patchSize: "medium",
        halfSample: true
      },
      decoder: {
        readers: [
          "ean_reader",
          "ean_8_reader",
          "upc_reader",
          "upc_e_reader"
        ],
        multiple: false
      },
      locate: true,
      numOfWorkers: 0,
      frequency: 10
    };

    Quagga.init(config, function(err) {
      if (err) {
        console.error(err);
        setStatus(statusEl, "Camera error: " + (err.message||err), "error");
        stopScanner();
        return;
      }
      quaggaInitialized = true;
      Quagga.start();
      setStatus(
        statusEl,
        mode === "receive"
          ? "Camera active. Scan items as they arrive."
          : "Camera active. Scan empties before tossing.",
        "ok"
      );

      const track = Quagga.CameraAccess && Quagga.CameraAccess.getActiveTrack && Quagga.CameraAccess.getActiveTrack();
      if (track && track.getCapabilities) {
        const caps = track.getCapabilities();
        if (caps && caps.torch) torchBtn.disabled = false;
      }
    });

    Quagga.onDetected(onQuaggaDetected);
  }

  function onQuaggaDetected(result) {
    if (!result || !result.codeResult || !result.codeResult.code) return;
    if (!currentScanMode) return;

    if (scanModalBackdrop.classList.contains("hidden") === false) {
      return;
    }

    if (!isHighConfidence(result)) return;

    let code = String(result.codeResult.code).trim();
    if (!code) return;

    if (code.length === 13 && code.startsWith("0")) {
      const candidate = code.substring(1);
      if (isValidUPC(candidate)) code = candidate;
    }
    if (code.length === 12 && !isValidUPC(code)) {
      const statusEl = currentScanMode === "receive" ? receiveStatus : useStatus;
      setStatus(statusEl, "Scan rejected (invalid UPC). Try again.", "error");
      return;
    }

    const now = Date.now();
    if (lastScanCode === code && now - lastScanTime < 750) {
      return;
    }
    lastScanCode = code;
    lastScanTime = now;

    if (navigator.vibrate) navigator.vibrate(80);
    playBeep();

    handleScan(code, currentScanMode);
  }

  function toggleTorch(mode) {
    const statusEl = mode === "receive" ? receiveStatus : useStatus;
    const btn = mode === "receive" ? toggleReceiveTorchBtn : toggleUseTorchBtn;

    const track = Quagga.CameraAccess && Quagga.CameraAccess.getActiveTrack && Quagga.CameraAccess.getActiveTrack();
    if (!track) {
      setStatus(statusEl, "Flash not available on this device.", "error");
      return;
    }
    if (!track.getCapabilities || !track.applyConstraints) {
      setStatus(statusEl, "Flash not supported by this browser.", "error");
      return;
    }

    const caps = track.getCapabilities();
    if (!caps || !caps.torch) {
      setStatus(statusEl, "Flash/torch not supported on this camera.", "error");
      return;
    }

    torchOn = !torchOn;
    track.applyConstraints({ advanced: [{ torch: torchOn }] })
      .then(() => {
        btn.textContent = torchOn ? "Flash Off" : "Flash On";
        setStatus(statusEl, torchOn ? "Flash on." : "Flash off.", "ok");
      })
      .catch(err => {
        console.warn("Torch error:", err);
        setStatus(statusEl, "Flash error: " + (err.message||err), "error");
      });
  }

  function stopScanner() {
    if (!currentScanMode) return;

    const mode = currentScanMode;
    const wrapper = mode === "receive" ? receiveVideoWrapper : useVideoWrapper;
    const startBtn = mode === "receive" ? startReceiveScanBtn : startUseScanBtn;
    const stopBtn = mode === "receive" ? stopReceiveScanBtn : stopUseScanBtn;
    const torchBtn = mode === "receive" ? toggleReceiveTorchBtn : toggleUseTorchBtn;
    const statusEl = mode === "receive" ? receiveStatus : useStatus;

    currentScanMode = null;
    torchOn = false;

    try {
      if (quaggaInitialized) {
        Quagga.offDetected(onQuaggaDetected);
        Quagga.stop();
      }
    } catch (e) {
      console.warn("Error stopping Quagga", e);
    }

    wrapper.classList.add("hidden");
    startBtn.disabled = false;
    stopBtn.disabled = true;
    torchBtn.disabled = true;
    torchBtn.textContent = "Flash";
    setStatus(statusEl, "", null);
  }

  startReceiveScanBtn.addEventListener("click", () => startScanner("receive"));
  stopReceiveScanBtn.addEventListener("click", () => stopScanner());
  toggleReceiveTorchBtn.addEventListener("click", () => toggleTorch("receive"));

  startUseScanBtn.addEventListener("click", () => startScanner("use"));
  stopUseScanBtn.addEventListener("click", () => stopScanner());
  toggleUseTorchBtn.addEventListener("click", () => toggleTorch("use"));

  function openNewItemWithQuantities(upc, initialQuantities) {
    modalMode = "create";
    modalUpcCurrent = upc;
    modalModeLabel.textContent = "New Item";
    modalTitle.textContent = "Describe this item";
    modalSubtitle.textContent = "We‚Äôve never seen this barcode before. Fill in the details once and we‚Äôll remember it.";

    refreshCategoryOptions();
    refreshBrandOptions();

    modalUpc.value = upc;
    modalName.value = "";
    modalBrand.value = brands[0] || "Other";
    modalNewBrand.value = "";
    newBrandWrapper.classList.add("hidden");
    modalCategory.value = categories.includes("Syrup") ? "Syrup" : categories[0];
    modalNewCategory.value = "";
    newCatWrapper.classList.add("hidden");
    modalSugarFree.checked = false;
    modalSize.value = "";
    modalUnit.value = "bottle";

    const qO = initialQuantities && typeof initialQuantities.office === "number" ? initialQuantities.office : 0;
    const qT = initialQuantities && typeof initialQuantities.trailer === "number" ? initialQuantities.trailer : 0;
    const qC = initialQuantities && typeof initialQuantities.caboose === "number" ? initialQuantities.caboose : 0;
    modalQtyOffice.value = qO;
    modalQtyTrailer.value = qT;
    modalQtyCaboose.value = qC;
    modalPar.value = "";
    modalNotes.value = "";
    setStatus(modalStatus, "", null);
    modalDeleteBtn.classList.add("hidden");
    itemModalBackdrop.classList.remove("hidden");
  }

  function openNewItem(upc) {
    openNewItemWithQuantities(upc, {office:0,trailer:0,caboose:0});
  }

  function openEditItem(upc) {
    const item = inventory[upc];
    if (!item) return;

    modalMode = "edit";
    modalUpcCurrent = upc;
    modalModeLabel.textContent = "Edit Item";
    modalTitle.textContent = item.name || "Edit item";
    modalSubtitle.textContent = "Adjust name, brand, category, par level or quantities as needed.";

    refreshCategoryOptions();
    refreshBrandOptions();

    modalUpc.value = upc;
    modalName.value = item.name || "";

    if (item.brand && !brands.includes(item.brand)) {
      brands.push(item.brand);
      saveBrands();
      refreshBrandOptions();
    }
    modalBrand.value = item.brand || brands[0] || "Other";
    modalNewBrand.value = "";
    newBrandWrapper.classList.add("hidden");

    if (item.category && !categories.includes(item.category)) {
      categories.push(item.category);
      saveCategories();
      refreshCategoryOptions();
    }
    modalCategory.value = item.category || categories[0] || "Other";
    modalNewCategory.value = "";
    newCatWrapper.classList.add("hidden");

    modalSugarFree.checked = !!item.sugarFree;
    modalSize.value = item.size || "";
    modalUnit.value = item.unit || "";
    modalQtyOffice.value = item.qty_office != null ? String(item.qty_office) : "0";
    modalQtyTrailer.value = item.qty_trailer != null ? String(item.qty_trailer) : "0";
    modalQtyCaboose.value = item.qty_caboose != null ? String(item.qty_caboose) : "0";
    modalPar.value = item.par != null ? String(item.par) : "";
    modalNotes.value = item.notes || "";
    setStatus(modalStatus, "", null);
    modalDeleteBtn.classList.remove("hidden");
    itemModalBackdrop.classList.remove("hidden");
  }

  function closeItemModal() {
    itemModalBackdrop.classList.add("hidden");
  }

  modalCancelBtn.addEventListener("click", closeItemModal);
  modalCloseBtn.addEventListener("click", closeItemModal);

  modalCategory.addEventListener("change", () => {
    if (modalCategory.value === "Other") {
      newCatWrapper.classList.remove("hidden");
      modalNewCategory.focus();
    } else {
      newCatWrapper.classList.add("hidden");
      modalNewCategory.value = "";
    }
  });

  modalBrand.addEventListener("change", () => {
    if (modalBrand.value === "Other") {
      newBrandWrapper.classList.remove("hidden");
      modalNewBrand.focus();
    } else {
      newBrandWrapper.classList.add("hidden");
      modalNewBrand.value = "";
    }
  });

  modalSaveBtn.addEventListener("click", () => {
    const upc = (modalUpc.value || "").trim();
    if (!upc) {
      setStatus(modalStatus, "UPC missing.", "error");
      return;
    }
    const name = modalName.value.trim();
    if (!name) {
      setStatus(modalStatus, "Give this item a name.", "error");
      return;
    }

    let selectedCat = modalCategory.value;
    if (selectedCat === "Other") {
      const newCat = modalNewCategory.value.trim();
      if (newCat.length > 0) {
        selectedCat = newCat;
        if (!categories.includes(newCat)) {
          categories.push(newCat);
          saveCategories();
        }
      }
    }

    let brand = modalBrand.value;
    if (brand === "Other") {
      const newBrand = modalNewBrand.value.trim();
      if (newBrand.length > 0) {
        brand = newBrand;
        if (!brands.includes(newBrand)) {
          brands.push(newBrand);
          saveBrands();
        }
      }
    }

    const size = modalSize.value.trim();
    const unit = modalUnit.value.trim() || "bottle";
    const par = modalPar.value ? Number(modalPar.value) : 0;
    const qO = modalQtyOffice.value ? Math.max(0, Number(modalQtyOffice.value)) : 0;
    const qT = modalQtyTrailer.value ? Math.max(0, Number(modalQtyTrailer.value)) : 0;
    const qC = modalQtyCaboose.value ? Math.max(0, Number(modalQtyCaboose.value)) : 0;
    const notes = modalNotes.value.trim();
    const sugarFree = modalSugarFree.checked;
    const now = new Date().toISOString();

    if (modalMode === "create") {
      inventory[upc] = {
        upc,
        name,
        brand,
        category: selectedCat,
        size,
        unit,
        par,
        qty_office: qO,
        qty_trailer: qT,
        qty_caboose: qC,
        notes,
        sugarFree,
        last_added: now
      };
      setStatus(modalStatus, "Item created.", "ok");
    } else {
      const item = inventory[upc] || { upc };
      item.name = name;
      item.brand = brand;
      item.category = selectedCat;
      item.size = size;
      item.unit = unit;
      item.par = par;
      item.qty_office = qO;
      item.qty_trailer = qT;
      item.qty_caboose = qC;
      item.notes = notes;
      item.sugarFree = sugarFree;
      inventory[upc] = item;
      setStatus(modalStatus, "Item updated.", "ok");
    }

    saveInventoryToStorage();
    renderInventoryTable();
    updateSummaryLine();
    setTimeout(closeItemModal, 200);
  });

  modalDeleteBtn.addEventListener("click", () => {
    if (!modalUpcCurrent) return;
    if (!confirm("Remove this item from inventory? This only affects this device.")) return;
    delete inventory[modalUpcCurrent];
    saveInventoryToStorage();
    renderInventoryTable();
    updateSummaryLine();
    closeItemModal();
  });

  btnExport.addEventListener("click", () => {
    const rows = inventoryArray().sort((a,b) => {
      const ca = (a.category||"Other").localeCompare(b.category||"Other");
      if (ca !== 0) return ca;
      return (a.name||"").localeCompare(b.name||"");
    });

    const now = new Date();
    const dateStr = now.toLocaleString();

    const win = window.open("", "_blank");
    if (!win) {
      alert("Popup blocked. Allow popups for this site to export/print.");
      return;
    }

    win.document.write("<!DOCTYPE html><html><head><meta charset='UTF-8'><title>Brewtopia Inventory Export</title>");
    win.document.write("<style>");
    win.document.write(`
      body { font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif; margin: 20px; color: #111827; }
      h1 { margin: 0 0 4px; }
      .muted { color: #6b7280; font-size: 13px; }
      table { width: 100%; border-collapse: collapse; margin-top: 16px; font-size: 13px; }
      th, td { border: 1px solid #d1d5db; padding: 6px 4px; text-align: left; }
      th { background: #f3f4f6; font-size: 12px; }
      tr:nth-child(even) td { background: #f9fafb; }
    `);
    win.document.write("</style></head><body>");
    win.document.write("<h1>Brewtopia Inventory</h1>");
    win.document.write(`<div class="muted">Exported ${dateStr}</div>`);
    win.document.write("<table><thead><tr>");
    win.document.write("<th>Category</th><th>Brand</th><th>Item</th><th>UPC</th><th>Size</th><th>Unit</th><th>Office</th><th>Trailer</th><th>Caboose</th><th>Total</th><th>Par</th><th>Sugar Free</th><th>Notes</th>");
    win.document.write("</tr></thead><tbody>");

    if (!rows.length) {
      win.document.write("<tr><td colspan='13'>No items in inventory.</td></tr>");
    } else {
      rows.forEach(item => {
        const qO = Number(item.qty_office||0);
        const qT = Number(item.qty_trailer||0);
        const qC = Number(item.qty_caboose||0);
        const total = qO + qT + qC;
        win.document.write("<tr>");
        win.document.write(`<td>${item.category || ""}</td>`);
        win.document.write(`<td>${item.brand || ""}</td>`);
        win.document.write(`<td>${item.name || ""}</td>`);
        win.document.write(`<td>${item.upc || ""}</td>`);
        win.document.write(`<td>${item.size || ""}</td>`);
        win.document.write(`<td>${item.unit || ""}</td>`);
        win.document.write(`<td>${qO}</td>`);
        win.document.write(`<td>${qT}</td>`);
        win.document.write(`<td>${qC}</td>`);
        win.document.write(`<td>${total}</td>`);
        win.document.write(`<td>${item.par != null ? item.par : ""}</td>`);
        win.document.write(`<td>${item.sugarFree ? "Yes" : "No"}</td>`);
        win.document.write(`<td>${item.notes || ""}</td>`);
        win.document.write("</tr>");
      });
    }

    win.document.write("</tbody></table>");
    win.document.write("</body></html>");
    win.document.close();

    win.focus();
    win.print();
  });

  btnExportHtml.addEventListener("click", () => {
    const rows = inventoryArray().sort((a,b) => {
      const ca = (a.category||"Other").localeCompare(b.category||"Other");
      if (ca !== 0) return ca;
      return (a.name||"").localeCompare(b.name||"");
    });

    const now = new Date();
    const dateStr = now.toLocaleString();
    const fileDate = now.toISOString().slice(0,10);

    let html = `<!DOCTYPE html>
<html><head><meta charset="UTF-8">
<title>Brewtopia Inventory Export</title>
<style>
  body { font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif; margin: 20px; color: #111827; }
  h1 { margin: 0 0 4px; }
  .muted { color: #6b7280; font-size: 13px; }
  table { width: 100%; border-collapse: collapse; margin-top: 16px; font-size: 13px; }
  th, td { border: 1px solid #d1d5db; padding: 6px 4px; text-align: left; }
  th { background: #f3f4f6; font-size: 12px; }
  tr:nth-child(even) td { background: #f9fafb; }
</style>
</head><body>
<h1>Brewtopia Inventory</h1>
<div class="muted">Exported ${dateStr}</div>
<table>
<thead>
<tr>
  <th>Category</th>
  <th>Brand</th>
  <th>Item</th>
  <th>UPC</th>
  <th>Size</th>
  <th>Unit</th>
  <th>Office</th>
  <th>Trailer</th>
  <th>Caboose</th>
  <th>Total</th>
  <th>Par</th>
  <th>Sugar Free</th>
  <th>Notes</th>
</tr>
</thead>
<tbody>
`;

    if (!rows.length) {
      html += `<tr><td colspan="13">No items in inventory.</td></tr>`;
    } else {
      rows.forEach(item => {
        const qO = Number(item.qty_office||0);
        const qT = Number(item.qty_trailer||0);
        const qC = Number(item.qty_caboose||0);
        const total = qO + qT + qC;
        html += `<tr>
  <td>${item.category || ""}</td>
  <td>${item.brand || ""}</td>
  <td>${item.name || ""}</td>
  <td>${item.upc || ""}</td>
  <td>${item.size || ""}</td>
  <td>${item.unit || ""}</td>
  <td>${qO}</td>
  <td>${qT}</td>
  <td>${qC}</td>
  <td>${total}</td>
  <td>${item.par != null ? item.par : ""}</td>
  <td>${item.sugarFree ? "Yes" : "No"}</td>
  <td>${item.notes || ""}</td>
</tr>
`;
      });
    }

    html += `
</tbody>
</table>
</body></html>`;

    const blob = new Blob([html], { type: "text/html" });
    const url = URL.createObjectURL(blob);
    const a = document.createElement("a");
    a.href = url;
    a.download = `brewtopia-inventory-${fileDate}.html`;
    document.body.appendChild(a);
    a.click();
    a.remove();
    setTimeout(() => URL.revokeObjectURL(url), 1500);
  });

  btnImport.addEventListener("click", () => {
    importFileInput.value = "";
    importFileInput.click();
  });

  importFileInput.addEventListener("change", () => {
    const file = importFileInput.files && importFileInput.files[0];
    if (!file) return;
    const reader = new FileReader();
    reader.onload = e => {
      try {
        const html = e.target.result;
        processImport(html);
        setStatus(globalStatus, "Import successful. Inventory replaced from file.", "ok");
        renderInventoryTable();
        updateSummaryLine();
      } catch (err) {
        console.error("Import error:", err);
        setStatus(globalStatus, "Import failed: " + (err.message||err), "error");
      }
    };
    reader.readAsText(file);
  });

  function processImport(html) {
    const parser = new DOMParser();
    const doc = parser.parseFromString(html, "text/html");
    const table = doc.querySelector("table");
    if (!table) throw new Error("No table found in import file.");

    const ths = table.querySelectorAll("thead th");
    const rows = table.querySelectorAll("tbody tr");
    if (!rows.length) throw new Error("No data rows found in import file.");

    const newInv = {};
    let importedCount = 0;

    if (ths.length >= 13) {
      // new format with locations
      rows.forEach(tr => {
        const tds = tr.querySelectorAll("td");
        if (tds.length < 13) return;

        const cat   = tds[0].textContent.trim();
        const brand = tds[1].textContent.trim();
        const name  = tds[2].textContent.trim();
        const upc   = tds[3].textContent.trim();
        const size  = tds[4].textContent.trim();
        const unit  = tds[5].textContent.trim();
        const qO    = parseInt((tds[6].textContent||"").trim()||"0",10);
        const qT    = parseInt((tds[7].textContent||"").trim()||"0",10);
        const qC    = parseInt((tds[8].textContent||"").trim()||"0",10);
        const par   = parseInt((tds[10].textContent||"").trim()||"0",10);
        const sfTxt = (tds[11].textContent||"").trim().toLowerCase();
        const notes = tds[12].textContent.trim();

        if (!upc) return;
        const sugarFree = (sfTxt === "yes" || sfTxt === "true" || sfTxt === "sf");

        newInv[upc] = {
          upc,
          name,
          brand,
          category: cat || "Other",
          size,
          unit,
          qty_office: isNaN(qO) ? 0 : qO,
          qty_trailer: isNaN(qT) ? 0 : qT,
          qty_caboose: isNaN(qC) ? 0 : qC,
          par: isNaN(par) ? 0 : par,
          sugarFree,
          notes
        };
        importedCount++;
      });
    } else if (ths.length >= 10) {
      // old format: Category, Brand, Item, UPC, Size, Unit, Qty, Par, SF, Notes
      rows.forEach(tr => {
        const tds = tr.querySelectorAll("td");
        if (tds.length < 10) return;

        const cat   = tds[0].textContent.trim();
        const brand = tds[1].textContent.trim();
        const name  = tds[2].textContent.trim();
        const upc   = tds[3].textContent.trim();
        const size  = tds[4].textContent.trim();
        const unit  = tds[5].textContent.trim();
        const qty   = parseInt((tds[6].textContent||"").trim()||"0",10);
        const par   = parseInt((tds[7].textContent||"").trim()||"0",10);
        const sfTxt = (tds[8].textContent||"").trim().toLowerCase();
        const notes = tds[9].textContent.trim();

        if (!upc) return;
        const sugarFree = (sfTxt === "yes" || sfTxt === "true" || sfTxt === "sf");

        newInv[upc] = {
          upc,
          name,
          brand,
          category: cat || "Other",
          size,
          unit,
          qty_office: isNaN(qty) ? 0 : qty,
          qty_trailer: 0,
          qty_caboose: 0,
          par: isNaN(par) ? 0 : par,
          sugarFree,
          notes
        };
        importedCount++;
      });
    } else {
      throw new Error("Unexpected table format in import file.");
    }

    if (!importedCount) throw new Error("No valid rows found in import file.");

    inventory = newInv;
    saveInventoryToStorage();
    syncCategoriesAndBrandsFromInventory();
  }

  document.addEventListener("keydown", (e) => {
    if (!mainArea || mainArea.classList.contains("hidden")) return;

    if (scanModalBackdrop.classList.contains("hidden") === false) return;

    if (e.key === "Enter") {
      const code = usbBuffer.trim();
      usbBuffer = "";
      if (code.length >= 6) {
        playBeep();
        if (navigator.vibrate) navigator.vibrate(50);

        let normalized = code;
        if (normalized.length === 13 && normalized.startsWith("0")) {
          const candidate = normalized.substring(1);
          if (isValidUPC(candidate)) normalized = candidate;
        }
        const mode = !receiveCard.classList.contains("hidden") ? "receive"
                    : !useCard.classList.contains("hidden") ? "use"
                    : null;
        if (mode) handleScan(normalized, mode);
      }
      return;
    }

    if (e.key.length === 1 && /\d/.test(e.key)) {
      usbBuffer += e.key;
      clearTimeout(usbTimer);
      usbTimer = setTimeout(() => (usbBuffer = ""), 1000);
    }
  });

  document.addEventListener("visibilitychange", () => {
    if (document.hidden) stopScanner();
  });

  window.addEventListener("beforeunload", () => {
    stopScanner();
  });

  document.addEventListener("keydown", (e) => {
    if (e.key === "Escape") {
      closeItemModal();
      closeScanModal();
    }
  });

  (function init() {
    loadCategories();
    loadBrands();
    if (localStorage.getItem("brewtopia_pin_ok") === "1") {
      enterMain();
    }
  })();
</script>
</body>
</html>
