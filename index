  const PIN = "6251";
  const STORAGE_KEY = "brewtopia_inventory_v2_locations";
  const STORAGE_CATS = "brewtopia_categories_v1";
  const STORAGE_BRANDS = "brewtopia_brands_v1";

  let inventory = {};   // upc -> item
  let modalMode = "create";
  let modalUpcCurrent = null;

  let categories = ["Syrup", "Milk", "Topping", "Cup", "Other"];
  let brands = ["Torani", "Monin", "DaVinci", "Hollander", "Other"];

  let currentScanMode = null; // "receive" | "use" | null
  let quaggaInitialized = false;
  let torchOn = false;

  let lastScanCode = null;
  let lastScanTime = 0;

  let pendingUPC = null;
  let pendingAction = null; // "receive" | "use"

  let usbBuffer = "";
  let usbTimer = null;

